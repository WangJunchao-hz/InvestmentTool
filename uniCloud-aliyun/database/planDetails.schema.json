// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["buyAmount", "sellAmount", "targetPercent", "position"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"planId": {
			"bsonType": "string",
			"description": "计划id"
		},
		"opType": {
			"bsonType": "string",
			"defaultValue": "buy",
			"description": "操作类型"
		},
		"buyAmount": {
			"bsonType": "double",
			"label": "买入金额",
			"minimum": 0,
			"description": "买入金额"
		},
		"totalBuyAmount": {
			"bsonType": "double",
			"label": "买入总额",
			"minimum": 0,
			"description": "买入总额"
		},
		"onceBuyAmount": {
			"bsonType": "double",
			"label": "一次交易累计买入总额",
			"minimum": 0,
			"description": "一次交易累计买入总额"
		},
		"sellAmount": {
			"bsonType": "double",
			"label": "卖出金额",
			"minimum": 0,
			"description": "卖出金额"
		},
		"totalSellAmount": {
			"bsonType": "double",
			"label": "卖出总额",
			"minimum": 0,
			"description": "卖出总额"
		},
		"onceSellAmount": {
			"bsonType": "double",
			"label": "一次交易累计卖出总额",
			"minimum": 0,
			"description": "一次交易累计卖出总额"
		},
		"profitAdnLoss": {
			"bsonType": "double",
			"description": "本次盈亏金额"
		},
		"onceProfitAdnLoss": {
			"bsonType": "double",
			"description": "一个交易过程中的盈亏金额"
		},
		"totalProfitAdnLoss": {
			"bsonType": "double",
			"description": "总共盈亏金额"
		},
		"percentage": {
			"bsonType": "double",
			"description": "本次金额盈亏百分比"
		},
		"cachePercentage": {
			"bsonType": "double",
			"description": "盈亏比累计缓存"
		},
		"oncePercentage": {
			"bsonType": "double",
			"description": "一个交易过程中金额盈亏百分比"
		},
		"totalPercentage": {
			"bsonType": "double",
			"description": "总共金额盈亏百分比"
		},
		"isProfit": {
			"bsonType": "bool",
			"description": "本次是否盈利",
			"defaultValue": true
		},
		"isOnceProfit": {
			"bsonType": "bool",
			"description": "一个交易过程中是否盈利",
			"defaultValue": true
		},
		"isTotalProfit": {
			"bsonType": "bool",
			"description": "总体是否盈利",
			"defaultValue": true
		},
		"position": {
			"bsonType": "int",
			"description": "买入的仓位",
			"minimum": 1,
			"defaultValue": 1,
			"label": "仓位"
		},
		"targetPercent": {
			"bsonType": "double",
			"label": "加仓百分比",
			"minimum": 0,
			"maximum": 100,
			"description": "当一次交易过程中累计亏损达到此值建议加仓",
			"defaultValue": 10
		},
		"preAdvise": {
			"bsonType": "double",
			"description": "操作建议"
		},
		"isComplete": {
			"bsonType": "bool",
			"description": "一个交易闭环是否完成",
			"defaultValue": false
		},
		"createDate": {
			"bsonType": "timestamp",
			"description": "创建时间"
		},
		"updateDate": {
			"bsonType": "timestamp",
			"description": "更新时间"
		}
	}
}
