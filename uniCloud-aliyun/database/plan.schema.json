// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["planName"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"userId": {
			"bsonType": "string",
			"description": "用户唯一标识"
		},
		"planName": {
			"bsonType": "string",
			"trim": "both",
			"maxLength": 8,
			"label": "计划名称",
			"description": "请输入"
		},
		"planType": {
			"bsonType": "object",
			"label": "计划类型"
		},
		"remarks": {
			"bsonType": "string",
			"label": "备注"
		},
		"totalPercentage": {
			"bsonType": "double",
			"description": "总共金额盈亏百分比"
		},
		"isTotalProfit": {
			"bsonType": "bool",
			"description": "总体是否盈利",
			"defaultValue": true
		},
		"preAdvise": {
			"bsonType": "double",
			"description": "操作建议"
		},
		"opType": {
			"bsonType": "string",
			"defaultValue": "buy",
			"description": "操作类型"
		},
		"createDate": {
			"bsonType": "timestamp",
			"description": "创建时间"
		},
		"updateDate": {
			"bsonType": "timestamp",
			"description": "更新时间"
		}
	}
}
